        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group>
                    <group>
                        <field name="attendance_rule_id" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>